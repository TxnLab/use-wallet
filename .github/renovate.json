{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:js-lib"],
  "dependencyDashboard": true,
  "configMigration": true,
  "timezone": "America/New_York",
  "assignees": ["drichar"],
  "baseBranches": ["main"],
  "schedule": "on the 1st day of the month",
  "ignorePaths": ["**/node_modules/**"],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "groupName": "non-major dependencies",
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "groupName": "Wallet dependencies",
      "rangeStrategy": "bump",
      "matchPackageNames": [
        "/@agoralabs-sh/avm-web-provider/",
        "/@blockshake/defly-connect/",
        "/@magic-ext/algorand/",
        "/magic-sdk/",
        "/@perawallet/connect/",
        "/lute-connect/",
        "/walletconnect/"
      ]
    },
    {
      "groupName": "Type definitions",
      "matchPackageNames": ["@types/**"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "groupName": "React dependencies",
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackageNames": ["/react/"]
    },
    {
      "groupName": "Vue dependencies",
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackageNames": ["/vue/"]
    },
    {
      "groupName": "SolidJS dependencies",
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackageNames": ["/solid/"]
    },
    {
      "groupName": "ESLint and Prettier",
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackageNames": ["/eslint/", "/prettier/"]
    },
    {
      "groupName": "Tanstack Store",
      "matchPackageNames": ["@tanstack/**"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "groupName": "React",
      "matchSourceUrls": ["https://github.com/facebook/react"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "groupName": "React",
      "matchPackageNames": ["@types/react", "@types/react-dom"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "groupName": "TypeScript",
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "groupName": "algosdk",
      "matchPackageNames": ["algosdk"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchCategories": ["node"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@types/node"],
      "enabled": false
    },
    {
      "matchDepTypes": ["engines"],
      "enabled": false
    }
  ],
  "npm": {
    "lockFileMaintenance": {
      "enabled": true,
      "schedule": "on the 2nd day of the month"
    }
  }
}
