{
  "name": "use-wallet",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/txnlab/use-wallet.git"
  },
  "packageManager": "pnpm@9.2.0",
  "type": "module",
  "workspaces": [
    "packages/use-wallet",
    "packages/use-wallet-react",
    "packages/use-wallet-solid",
    "packages/use-wallet-vue",
    "examples/use-wallet-example-vanilla-ts",
    "examples/use-wallet-example-react",
    "examples/use-wallet-example-solid",
    "examples/use-wallet-example-vue"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm -r --filter '@txnlab/*' build",
    "test": "pnpm -r --if-present test",
    "lint": "pnpm -r lint",
    "prettier": "prettier --check .",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.2",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitejs/plugin-react": "4.2.1",
    "@vitejs/plugin-vue": "5.0.4",
    "@vitejs/plugin-vue-jsx": "3.1.0",
    "@vue/test-utils": "2.4.5",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "prettier": "3.2.5",
    "vite": "5.2.6",
    "vite-plugin-solid": "2.10.2",
    "vitest": "2.0.5",
    "vue-demi": "0.14.7"
  }
}
